{
  "name": "nodejs-boilerplate",
  "version": "1.1.0",
  "description": "Clean Architecture for Node.js projects (TypeScript + Express + TypeORM + TypeDI + PostgreSQL)",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node src/main.ts",
    "build": "tsc",
    "start": "nodemon src/main.ts",
    "start:prod": "node dist/main.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "argon2": "^0.31.1",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.0",
    "celebrate": "^15.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-jwt": "^8.5.1",
    "express-swagger-autoconfigure": "^2.1.1",
    "helmet": "^7.0.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.10",
    "typeorm-typedi-extensions": "^0.4.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.7.0",
    "typescript": "^5.2.2"
  }
}
